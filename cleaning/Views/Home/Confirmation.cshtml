@model cleaning.ViewModels.EstimateViewModel
@{
    ViewBag.Title = "Confirmation";
}
<!-- Title Page -->
<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(/images/slide1-03.jpg);">
    <h2 class="tit6 t-center">
        Confirmation
    </h2>
</section>

<!-- Reservation -->
<section body ng-app class="section-reservation bg1-pattern p-t-100 p-b-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-b-30">
                <div class="t-center">
                    <span class="tit2 t-center">
                        Please review your order
                    </span>

                    <h3 class="tit3 t-center m-b-35 m-t-2">
                        Confirmation
                    </h3>
                </div>
                <div class="table-responsive m-b-35 m-t-2">
                    <table class="table" >
                        <thead>
                            <tr style="background-color:#36d0c4">
                                <th class="c-white">Order</th>
                                <th class="c-white">Date</th>
                                <th class="c-white">Time</th>
                                <th class="c-white">Addres</th>
                                <th class="c-white">Email</th>
                                <th class="c-white">Phone</th>
                                <th class="c-white">Service</th>
                                <th class="c-white">Bathrooms</th>
                                <th class="c-white">Bedrooms</th>
                                <th class="c-white">Pets</th>
                                <th class="c-white">Size</th>
                                <th class="c-white">Comments</th>
                                <th class="c-white">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Order</td>
                                <td>Date</td>
                                <td>Time</td>
                                <td>Addres</td>
                                <td>@(Model.Semail)</td>
                                <td>@(Model.Sphone)</td>
                                <td>Service</td>
                                <td>Bathrooms</td>
                                <td>Bedrooms</td>
                                <td>Pets</td>
                                <td>Size</td>
                                <td>Comments</td> 
                                <th>@(Model.Samount)</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="t-center">
                    <form action="/Charge" method="POST">
                        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                data-key="@(Model.StripePublishableKey)"
                                data-amount="@(Model.Samount)"
                                data-name="Stripe.com"
                                data-description="Sample Charge"
                                data-locale="auto"
                                data-zip-code="true">
                        </script>
                    </form>
                </div>
            </div>

        </div>

        <div class="info-reservation flex-w p-t-30">
            <div class="size23 w-full-md p-t-40 p-r-30 p-r-0-md">
                <h4 class="txt5 m-b-18">
                    Reserve by Phone
                </h4>

                <p class="size25">
                    Donec quis euismod purus. Donec feugiat ligula rhoncus, varius nisl sed, tincidunt lectus.
                    <span class="txt25">Nulla vulputate</span>
                    , lectus vel volutpat efficitur, orci
                    <span class="txt25">lacus sodales</span>
                    sem, sit amet quam:
                    <span class="txt24">(001) 345 6889</span>
                </p>
            </div>

            <div class="size24 w-full-md p-t-40">
                <h4 class="txt5 m-b-18">
                    For Custom cleaning
                </h4>

                <p class="size26">
                    Donec feugiat ligula rhoncus:
                    <span class="txt24">(001) 345 6889</span>
                    , varius nisl sed, tinci-dunt lectus sodales sem.
                </p>
            </div>

        </div>
    </div>
</section>
